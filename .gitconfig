[user]
	name = Lucas Campos
	email = l.campos@fz-juelich.de

[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	type = cat-file -t
	dump = cat-file -p
	d = difftool
[push]
	default = simple
[diff]
	tool = vimdiff
[difftool]
	prompt = false
